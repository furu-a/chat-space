%ul.nav
  %li.nav_my-account
    = current_user.name
  %li.nav_setting
    = link_to new_group_path do
      %i.fas.fa-edit.icon
  %li.nav_add
    = link_to edit_user_path(current_user) do
      %i.fas.fa-cog.icon

%article.group
  - current_user.groups.each do |group|
    %h3
    = link_to edit_group_path(group), class: "group_group-name" do
      = group.name
    %p.group_last-comment
      = group.show_last_message
